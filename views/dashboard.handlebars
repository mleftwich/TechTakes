<div class="container">
    <h1>Your Blogs</h1>
    <div class="card p-5">
    {{#each userBlogs as |blog|}}
<div class="card-header bg-secondary"><H2 class="text-light">{{blog.title}}</H2></div>
<div class="card-body bg-light"><p class="text-muted">{{blog.content}}</p></div>


  
   
     <h5>Comments</h5>
    <div class="card-body">
        {{#if this.comments.createdAt}}
        <b class="text-info comment">{{format_date this.comments.createdAt}}</b>
        {{/if}}
        {{#if this.comments.comment}}
    <p class="comment text-muted">{{this.comments.comment}}</p>
    
    -<b class="text-muted">{{this.comments.user.name}}</b>
  {{/if}}

    </div>

   {{/each}}




</div>
